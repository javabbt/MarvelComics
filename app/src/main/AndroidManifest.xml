<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yannick.loic.marvelcomics">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.yannick.loic.marvelcomics.application.MarvelComicsApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.yannick.loic.marvelcomics.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="@string/filter_view_http_comics">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepte les URIs qui commencent avec "http://www.gateway.marvel.com/comics” -->
                <data
                    android:host="http://gateway.marvel.com"
                    android:pathPrefix="/comics"
                    android:scheme="http" />
                <!-- notez que le "/" est requis pour le pathPrefix-->
            </intent-filter>
            <intent-filter android:label="@string/filter_view_comics">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepte les URIs qui commencent avec "indiecampers://comics” -->
                <data
                    android:host="comics"
                    android:scheme="indiecampers" />
            </intent-filter>
        </activity>
    </application>

</manifest>